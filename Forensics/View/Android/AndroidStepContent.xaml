<UserControl x:Class="Forensics.View.AndroidStepContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Forensics.View"
             mc:Ignorable="d" 
             d:DesignHeight="{StaticResource HeightStepContent}" d:DesignWidth="{StaticResource WidthStepContent}">
    <Grid>
        <TextBlock FontSize="18" 
                   Width="262"
                   Foreground="White" 
                   VerticalAlignment="Center"
                   Margin="60 0" Text="{Binding Desc}" 
                   HorizontalAlignment="Left" 
                   TextWrapping="Wrap" />

        <Image Width="368" Height="307" 
               Source="{Binding ImageSrc}" 
               HorizontalAlignment="Right"
               Margin="0 0 60 0"/>
    </Grid>
</UserControl>
